---
interface Props {
  title: string;
}
const { title } = Astro.props;
const hasHeaderExtra = Astro.slots.has("header-extra");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Daily digest of top Lobsters stories, summarized by AI"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title="Lobsters Daily RSS" href="/rss.xml" />
    <title>{title}</title>
  </head>
  <body class="bg-lobster-dark text-lobster-text min-h-screen">
    <header
      class="border-b border-white/10 px-4 py-4 sticky top-0 bg-lobster-dark/95 backdrop-blur-sm z-50"
    >
      <div class="max-w-7xl mx-auto flex items-center justify-between">
        <div class="flex items-center gap-1">
          <slot name="header-extra" />
          <a
            href="/"
            class="text-xl font-bold text-lobster-accent no-underline hover:opacity-80"
          >
            ðŸ¦ž Lobsters Daily
          </a>
        </div>
        <a
          href="/rss.xml"
          class="text-lobster-muted hover:text-lobster-accent no-underline flex items-center gap-1.5"
          title="RSS Feed"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <circle cx="6.18" cy="17.82" r="2.18"/>
            <path d="M4 4.44v2.83c7.03 0 12.73 5.7 12.73 12.73h2.83c0-8.59-6.97-15.56-15.56-15.56zm0 5.66v2.83c3.9 0 7.07 3.17 7.07 7.07h2.83c0-5.47-4.43-9.9-9.9-9.9z"/>
          </svg>
          <span class="text-sm">RSS</span>
        </a>
      </div>
    </header>

    <div class="max-w-7xl mx-auto px-4 py-6">
      <slot />
    </div>

    <footer class="border-t border-white/10 px-4 py-6 mt-8">
      <div class="max-w-7xl mx-auto text-center text-lobster-muted text-sm">
        Made by <a
          href="https://blog.gujiakai.top"
          target="_blank"
          rel="noopener"
          class="text-lobster-accent no-underline hover:underline">Jiakai</a
        > and <a
          href="https://claude.com/product/claude-code"
          target="_blank"
          rel="noopener"
          class="text-lobster-accent no-underline hover:underline">Claude</a
        >.
      </div>
    </footer>
  </body>
</html>
